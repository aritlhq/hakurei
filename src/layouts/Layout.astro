---
import "../assets/app.css";
import ButtomNav from "../components/ButtomNav.astro";

const {title = "Hakurei UniTask"} = Astro.props;
---
<!doctype html>
<html lang="id">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body class="bg-base-100">
<div class="max-w-md mx-auto bg-base-100 min-h-screen">
    <main class="relative pb-24 px-4">
        <slot/>
    </main>
    <ButtomNav currentPath={Astro.url.pathname}/>
</div>
</body>
</html>