---
const text = "Hello there, welcome to my blog";
const letters = text.split("");
---

<div class="text-reveal-container">
    <h1 class="text-reveal">
        {letters.map((letter, index) => (
                <span class="letter" style={`animation-delay: ${index * 0.05}s`}>
        {letter === ' ' ? '\u00A0' : letter}
      </span>
        ))}
    </h1>
</div>

<style>
    .text-reveal-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem 1rem;
        border-radius: 8px;
        max-width: 100%;
        box-sizing: border-box;
    }

    .text-reveal {
        font-size: clamp(1.75rem, 5vw, 2.5rem);
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        text-align: center;
    }

    .letter {
        opacity: 0;
        filter: blur(10px);
        transform: translateY(20px);
        animation: reveal 1s forwards;
        padding: 0 0.05em;
    }

    @keyframes reveal {
        to {
            opacity: 1;
            filter: blur(0);
            transform: translateY(0);
        }
    }
</style>